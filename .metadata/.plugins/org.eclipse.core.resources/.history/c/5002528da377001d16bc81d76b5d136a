		tffname=new JTextField();
		tffname.setBounds(600,150,150,30);
		tffname.setVisible(true);
		add(tffname);
		
		labeldob=new JLabel("D.O.B");
		labeldob.setBounds(50,200,150,30);
		labeldob.setFont(new Font("Raleway",Font.BOLD,25));
